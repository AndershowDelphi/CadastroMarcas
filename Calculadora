unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Bt8: TButton;
    Bt9: TButton;
    BtSomar: TButton;
    Bt7: TButton;
    Btmenos: TButton;
    Btvezes: TButton;
    BtDividir: TButton;
    Bt4: TButton;
    Bt5: TButton;
    Bt6: TButton;
    Bt1: TButton;
    Bt2: TButton;
    Button10: TButton;
    Btlimpar: TButton;
    Bt0: TButton;
    BtIgual: TButton;
    procedure BtSomarClick(Sender: TObject);
    procedure BtmenosClick(Sender: TObject);
    procedure BtvezesClick(Sender: TObject);
    procedure BtDividirClick(Sender: TObject);
    procedure NumeroClick(Sender: TObject);
    procedure BtIgualClick(Sender: TObject);
    procedure BtlimparClick(Sender: TObject);
  private

  FOperacao : char;
  FTotal : Double;
  FUltimonumero : double;

  Procedure calcular;
  Procedure Limpar;

  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.BtDividirClick(Sender: TObject);
begin
  FUltimonumero := StrToFloat (Edit1.text);
  Calcular;
  Foperacao := '/';
end;

procedure TForm1.NumeroClick(Sender: TObject);
begin
  if Fultimonumero = 0 then
    Edit1.text := Tbutton(sender).caption
  else
    Edit1.text := Edit1.text + Tbutton(sender).caption;
    Fultimonumero :=  strtofloat (edit1.text);
end;



procedure TForm1.BtIgualClick(Sender: TObject);
begin
  Calcular;
end;

procedure TForm1.BtlimparClick(Sender: TObject);
begin
 Limpar;
end;

procedure TForm1.BtmenosClick(Sender: TObject);
begin
  FUltimonumero := StrToFloat (Edit1.text);
  Calcular;
  Foperacao := '-';
end;

procedure TForm1.BtSomarClick(Sender: TObject);
begin
   FUltimonumero := StrToFloat (Edit1.text);
   Calcular;
   Foperacao := '+';
end;

procedure TForm1.BtvezesClick(Sender: TObject);
begin
  FUltimonumero := StrToFloat (Edit1.text);
  Calcular;
  Foperacao := '*';
end;

procedure TForm1.calcular;
begin

  case FOperacao of
    '+' : Ftotal := Ftotal + strTofloat (Edit1.text);
    '-' : FTotal := Ftotal - StrToFloat (edit1.text);
    '*' : FTotal := Ftotal * StrToFloat (edit1.text);
    '/' : FTotal := Ftotal / StrToFloat (edit1.text);
  end;

     Edit1.text := FloatToStr (Ftotal);
     Fultimonumero := 0;

end;

procedure TForm1.Limpar;
begin
   Fultimonumero := 0;
   Edit1.text := '0';
   FOperacao := '+';
   Ftotal := 0;
end;

end.
